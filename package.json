{
	"name": "arango-server",
	"version": "0.4.2",
	"description": "A Model Context Protocol Server for ArangoDB",
	"type": "module",
	"bin": {
		"arango-server": "./build/index.js"
	},
	"files": [
		"build"
	],
	"scripts": {
		"build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
		"prepare": "npm run build",
		"watch": "tsc --watch",
		"inspector": "npx @modelcontextprotocol/inspector build/index.js",
		"dev": "tsc --watch",
		"start": "node build/index.js",
		"test": "jest",
		"lint": "eslint . --ext .ts",
		"format": "prettier --write \"src/**/*.ts\""
	},
	"keywords": [
		"arango",
		"arangodb",
		"mcp",
		"model-context-protocol"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ravenwits/mcp-server-arangodb.git"
	},
	"homepage": "https://github.com/ravenwits/mcp-server-arangodb#readme",
	"author": "Alp SarÄ±yer <hi@alpsariyer.dev>",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "0.6.0",
		"arangojs": "^9.2.0"
	},
	"devDependencies": {
		"@types/node": "^20.11.24",
		"typescript": "^5.3.3"
	}
}
